category:            Development
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable main
  main-is:             Main.hs
  other-modules:       Data.Validation.BihistoricalError
                       Data.Validation.Parsing
                       Data.Validation.Aeson
                       Validation
                       Models
  -- other-extensions:
  build-depends:       base >=4.7 && <4.8
                     , aeson
                     , attoparsec
                     , bytestring
                     , lens
                     , text
                     , validation
                     , vector
                     , semigroups
                     , mtl
                     , transformers
                     , unordered-containers
                     , bifunctors
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:        -Wall


test-suite hlint
  build-depends:    base
                  , hlint == 1.9.*
  default-language: Haskell2010
  hs-source-dirs:   tests
  main-is:          HLint.hs
  type:             exitcode-stdio-1.0